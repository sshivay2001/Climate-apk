  <body>
    
  {{>nvbar}}

  <div class="container-fluid">
  <div class="row ">
    <div class="col-md-12 col-12 main-header">

    
   <div class="search-weather">
    <div class="box-input">
     
          <form class="input-form">
            <div>
              <input type="text" class="city" placeholder="Enter city"/>
              <a id="search_btn"/>
              {{!-- <i class="far fa-snowflake" style="margin-right: 0.2rem;"></i> --}}
              <i class="fa fa-search  search"></i>
              {{!-- <i class="far fa-magnifying-glass"></i> --}}
              </a>
            </div>
          </form>
      
    </div>
  

   <div class="display_space">

    <div class="day-date">
        <p class="day">SATURDAY</p>
        <p class="date">14 MAY</p>
    </div>

    <p class="loc"></p>

    <div class="weather-template">
        <span><p><p class="weat"></p><p class="tempStatus"></p></span>
    </div>
   

   </div>
   </div>

  
</div>
</div>
</div>
   

   
