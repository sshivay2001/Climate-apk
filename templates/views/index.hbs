    {{>nvbar}}

    <div class="container-fluid main-header">
      <div class="row">
          <div class="col-md-10 col-12 mx-auto">
            <div class="row">
        <div class="col-md-6 col-12 main-left header-text">
         <h1>Get the latest <span class="w">weather</span> in your city 
        </span></h1>
